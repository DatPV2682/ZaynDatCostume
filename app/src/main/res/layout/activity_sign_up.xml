<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayson"
    android:gravity="center"
    tools:context=".acivities.SignUpActivity">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:scaleType="centerCrop"
        android:src="@drawable/textlogo"
        android:paddingHorizontal="30dp"/>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="300dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="50dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username:"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/nunito"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/signup_username_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:hint="email..."
                android:fontFamily="@font/nunito"
                android:imeOptions="actionNext"
                android:maxLength="100"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/nunito"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/signup_password_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="20dp"
                android:textSize="20dp"
                android:maxLength="100"
                android:hint="password..."
                android:imeOptions="actionDone"
                android:fontFamily="@font/nunito"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retype password:"
                android:fontFamily="@font/nunito"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/signup_retype_password_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:maxLength="100"
                android:hint="retype password..."
                android:imeOptions="actionDone"
                android:fontFamily="@font/nunito"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/signup_button"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textSize="20dp"
                android:background="@drawable/gradient_rounded_button"
                android:fontFamily="@font/nunito"
                android:textStyle="bold"
                android:elevation="10dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>