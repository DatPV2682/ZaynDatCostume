<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayson"
    android:gravity="center"
    tools:context=".fragments.UpdateProfileFragment">


    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:elevation="7dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="THAY ĐỔI THÔNG TIN"
            android:fontFamily="@font/nunitobold"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:textSize="30dp" />
    </Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="50dp"
        app:cardBackgroundColor="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="50dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="top"
                android:padding="10dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatar_update_img"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:layout_margin="20dp"
                    android:layout_gravity="center"
                    app:civ_border_width="5dp"
                    app:civ_border_color="@color/colorAccent"/>

                <EditText
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="20dp"
                    android:id="@+id/name_update_edt"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:hint="Nhập tên"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="30dp" />
                <EditText
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="20dp"
                    android:id="@+id/password_update_edt"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:hint="Mật khẩu mới"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
                <EditText
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="20dp"
                    android:id="@+id/repassword_update_edt"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:hint="Nhập lại mật khẩu mới"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:padding="10dp">
                <Button
                    android:id="@+id/update_password_btn"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_rounded_button"
                    android:fontFamily="@font/nunito"
                    android:text="CẬP NHẬT MẬT KHẨU"
                    android:elevation="7dp"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/update_button"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_rounded_button"
                    android:fontFamily="@font/nunito"
                    android:text="CẬP NHẬT THÔNG TIN"
                    android:elevation="7dp"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>