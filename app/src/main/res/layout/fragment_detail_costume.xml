<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/grayson"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.DetailCostumeFragment">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:elevation="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="CHI TIẾT TRANG PHỤC"
            android:fontFamily="@font/nunitobold"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:textSize="30dp" />
    </Toolbar>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/detailimage"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="400dp"
            android:src="@drawable/zayndatlogo"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_marginTop="350dp"
            android:orientation="vertical"
            android:paddingBottom="70dp"
            android:background="@drawable/half_rounded_view">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="30dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/detailname"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="TEN Trang phuc"
                    android:fontFamily="@font/nunito"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:text="Giá bán:"
                            android:fontFamily="@font/nunito"
                            android:textSize="20dp"
                            android:gravity="left"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:text="Giá thuê:"
                            android:fontFamily="@font/nunito"
                            android:textSize="20dp"
                            android:gravity="left"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:layout_height="wrap_content"
                            android:text="Số luọng có sẵn:"
                            android:fontFamily="@font/nunito"
                            android:textSize="20dp"
                            android:gravity="left"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:text="Size có sẵn:"
                            android:fontFamily="@font/nunito"
                            android:textSize="20dp"
                            android:gravity="left"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phát hành bởi:"
                            android:layout_marginVertical="5dp"
                            android:fontFamily="@font/nunito"
                            android:textSize="20dp"
                            android:gravity="left"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/detailprice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:layout_marginVertical="5dp"
                            android:fontFamily="@font/nunito"
                            android:textSize="20dp"
                            android:gravity="right"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/detailrent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:text="0.00"
                            android:fontFamily="@font/nunito"
                            android:textSize="20dp"
                            android:gravity="right"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/detailquan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:text="0"
                            android:fontFamily="@font/nunito"
                            android:textSize="20dp"
                            android:gravity="right"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/detailsize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:text="X, XL"
                            android:fontFamily="@font/nunito"
                            android:textSize="20dp"
                            android:gravity="right"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/detailpublisher"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:text="Anime Costume"
                            android:fontFamily="@font/nunito"
                            android:textSize="20dp"
                            android:gravity="right"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="THUÊ NGAY"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:elevation="10dp"
                android:textSize="15dp"
                android:fontFamily="@font/nunito"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/white_rounded_button"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:elevation="10dp"
                android:textSize="15dp"
                android:fontFamily="@font/nunito"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:text="MUA NGAY"
                android:background="@drawable/white_rounded_button"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="THÊM VÀO GIỎ HÀNG"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:elevation="10dp"
                android:textSize="15dp"
                android:fontFamily="@font/nunito"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/white_rounded_button"/>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>