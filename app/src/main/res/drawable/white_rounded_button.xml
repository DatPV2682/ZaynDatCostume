<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái nhấn -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF5733"/> <!-- Màu nền khi nhấn -->
            <corners android:radius="50dp"/> <!-- Bán kính góc bo tròn -->
        </shape>
    </item>
    <!-- Trạng thái bình thường -->
    <item>
        <shape>
            <solid android:color="#FFFFFF"/> <!-- Màu nền bình thường -->
            <corners android:radius="50dp"/> <!-- Bán kính góc bo tròn -->
        </shape>
    </item>
</selector>
